<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/margin_micro"
    android:layout_marginHorizontal="@dimen/margin_medium"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/itemSequenceNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/margin_medium"
        android:textColor="#000000"
        android:textSize="@dimen/text_medium"
        android:padding="@dimen/margin_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/itemSequenceGoToList"
        android:text="Al Fatiha"/>

    <ImageButton
        android:id="@+id/itemSequenceGoToList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_round_navigate_next"
        android:layout_marginHorizontal="@dimen/margin_medium"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/margin_medium"
       app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/itemView"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemSequenceGoToList" />


</androidx.constraintlayout.widget.ConstraintLayout>