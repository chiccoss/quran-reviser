<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>



        <!-- Edit Text Region -->
        <item name="editTextStyle">@style/Widget.AppTheme.EditText</item>
    </style>

    <style name="Widget.AppTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">?attr/TextButton</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background_light</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingStart">@dimen/margin_large</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
        <item name="android:textColorHint">@color/grayText</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/titillium_web_semi_bold</item>
        <item name="android:textCursorDrawable">@color/black</item>
    </style>

</resources>
